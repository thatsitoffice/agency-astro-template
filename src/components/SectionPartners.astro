---
interface Partner {
  name: string;
  logo?: string;
  url?: string;
}

interface Props {
  title?: string;
  partners: Partner[];
}

const {
  title = 'Unsere Partner & Kooperationen',
  partners,
} = Astro.props;
---

<section class="partners section" aria-label="Partner">
  <div class="container">
    {title && (
      <div class="section-header">
        <h2>{title}</h2>
      </div>
    )}
    
    <div class="partners-grid">
      {partners.map((partner) => (
        <div class="partner-item">
          {partner.url ? (
            <a href={partner.url} target="_blank" rel="noopener noreferrer" class="partner-link">
              {partner.logo ? (
                <img src={partner.logo} alt={partner.name} loading="lazy" />
              ) : (
                <span>{partner.name}</span>
              )}
            </a>
          ) : (
            <>
              {partner.logo ? (
                <img src={partner.logo} alt={partner.name} loading="lazy" />
              ) : (
                <span>{partner.name}</span>
              )}
            </>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: var(--spacing-xl);
    align-items: center;
    margin-top: var(--spacing-2xl);
  }

  .partner-item {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-lg);
    opacity: 0.6;
    transition: opacity var(--transition-base);
    filter: grayscale(100%);
  }

  .partner-item:hover {
    opacity: 1;
    filter: grayscale(0%);
  }

  .partner-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    text-decoration: none;
  }

  .partner-item img {
    max-width: 100%;
    height: auto;
    max-height: 60px;
    object-fit: contain;
  }

  .partner-item span {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-light);
  }
</style>
